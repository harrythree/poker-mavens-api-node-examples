<div>
  {{#if error.message}}
    <div>Error: {{error.message}}</div>
  {{/if}}

  {{#unless error.message}}
    <table border='1' cellpadding='5'>
    <tr><th colspan='3'>{{sitename}} - Chip Leaders</th></tr>
    <tr><th>Rank</th><th>Player</th><th>Balance</th></tr>
    {{#each chips}}
      <tr><td>{{this.rank}}</td><td>{{this.player}}</td><td>{{this.balance}}</td></tr>
    {{/each}}
  {{/unless}}
</div>